<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
  xmlns="http://xamarin.com/schemas/2014/forms"
  xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
  x:Class="AppHost.Debug.WebViewNavigation"
  Title="Debug">

  <StackLayout
    Orientation="Vertical">
  
    <Label
      Text="DEBUG" 
      VerticalOptions="Center" 
      HorizontalOptions="Start" />

    <Button
      x:Name="_loadDefualtButton"
      Text="Load default local wap"
      />

    <Button
      x:Name="_loadDefualtTestUrlButton"
      Text="Load default test url"
      />

    <Entry
      x:Name="_urlEntry"
      Text="External Url"
      />

    <Button
      x:Name="_loadUrlButton"
      Text="Load url"
      />
    
  </StackLayout>
  
</ContentPage>